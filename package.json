{
  "name": "vanilla-html",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "copy:public": "node copy-public.js",
    "watch:public": "chokidar 'public/**/*' -c \"npm run copy:public\"",
    "dev:parcel": "parcel 'src/**/*.html' --no-source-maps --port 3000",
    "dev": "npm-run-all --parallel copy:public watch:public dev:parcel",
    "build:parcel": "parcel build 'src/**/*.html' --no-source-maps",
    "build": "npm-run-all copy:public build:parcel",
    "preview": "npx serve dist"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.14.0",
    "posthtml-include": "^2.0.1",
    "serve": "^14.2.4"
  }
}
